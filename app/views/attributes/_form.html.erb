<%= simple_form_for(@attribute) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :label %>
    <%#= f.input :attribute_layer_id%>
    <%= f.collection_select(:attribute_layer_id, AttributeLayer.all, :id, :label) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
